{
	"info": {
		"title": "LeafEdit",
		"author": "Universal-Team",
		"shortDesc": "LeafEdit is an Animal Crossing: New Leaf save manager and editor.",
		"description": "What is LeafEdit?\nLeafEdit is:\nAn Animal Crossing: New Leaf save manager & editor.\nWith this script you can: \n- Update to the Release version\n- Update to the Nightly version\n- Download the Spritesheets\nMake sure you have the Spritesheets!",
		"barColor": "#547239",
		"bgBottomColor": "#2c4d26",
		"bgTopColor": "#a8c060",
		"textColor": "#ffffff",
		"selectedColor": "#a8c060",
		"unselectedColor": "#00220c",
		"version": 2,
		"revision": 1
	},
	"release-cia": [
		{
			"type": "downloadRelease",
			"repo": "Universal-Team/LeafEdit",
			"file": "LeafEdit.cia",
			"output": "/LeafEdit.cia",
			"message": "Downloading LeafEdit cia (release)... please wait."
		},
		{
			"type": "installCia",
			"file": "/LeafEdit.cia",
			"message": "Installing the cia..."
		},
		{
			"type": "deleteFile",
			"file": "sdmc:/LeafEdit.cia",
			"message": "Deleting unneded file."
		}
	],
	"release-3dsx": [
		{
			"type": "downloadRelease",
			"repo": "Universal-Team/LeafEdit",
			"file": "LeafEdit.3dsx",
			"output": "/3ds/LeafEdit.3dsx",
			"message": "Downloading LeafEdit 3dsx (release)... please wait."
		}
	],
	"nightly-3dsx": [
		{
			"type": "downloadFile",
			"file": "https://github.com/Universal-Team/extras/raw/master/builds/LeafEdit/LeafEdit.3dsx",
			"output": "/3ds/LeafEdit.3dsx",
			"message": "Downloading LeafEdit 3dsx (nightly)... please wait."
		}
	],
	"nightly-cia": [
		{
			"type": "downloadFile",
			"file": "https://github.com/Universal-Team/extras/raw/master/builds/LeafEdit/LeafEdit.cia",
			"output": "/LeafEdit.cia",
			"message": "Downloading LeafEdit cia (nightly)... please wait."
		},
		{
			"type": "installCia",
			"file": "/LeafEdit.cia",
			"message": "Installing the cia..."
		},
		{
			"type": "deleteFile",
			"file": "sdmc:/LeafEdit.cia",
			"message": "Deleting unneded file."
		}
	],
	"SpriteSheets": [
		{
			"type": "downloadFile",
			"file": "https://github.com/Universal-Team/extras/raw/master/builds/LeafEdit/Spritesheets.zip",
			"output": "/Spritesheets.zip",
			"message": "Downloading LeafEdit Sheets... please wait."
		},
		{
			"type": "extractFile",
			"file": "/Spritesheets.zip",
			"input": "/",
			"output": "/LeafEdit/",
			"message": "Extracting SpriteSheets... please wait."
		},
		{
			"type": "deleteFile",
			"file": "sdmc:/SpriteSheets.zip",
			"message": "Deleting unneded file."
		}
	]
}
